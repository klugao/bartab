# Configuração npm para resolver problema com dependências opcionais do Rollup
# Especialmente necessário para ambientes Linux (Render, Vercel, etc)

# Ignora dependências opcionais que causam problemas
optional=false

# Permite instalação mesmo com conflitos de peer dependencies
legacy-peer-deps=true

# Força Rollup a usar JavaScript puro (não binários nativos)
ROLLUP_USE_NATIVE=false

